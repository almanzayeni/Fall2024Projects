<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?xml-model href="MainWindow.fxml"?>

<AnchorPane minHeight="405.0" minWidth="226.0" prefHeight="482.0" prefWidth="226.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.foodpantry.view.MainWindow">
   <children>
      <Label layoutX="14.0" layoutY="39.0" text="Enter New Food Name:" />
      <TextField fx:id="foodNameField" layoutX="14.0" layoutY="56.0" />
      <Label layoutX="14.0" layoutY="98.0" text="Select Food Type:" />
      <ComboBox fx:id="foodTypeComboBox" layoutX="14.0" layoutY="115.0" prefWidth="150.0" />
      <Button layoutX="105.0" layoutY="147.0" mnemonicParsing="false" onAction="#addFood" text="Add Food" />
      <ListView fx:id="pantryListView" layoutX="14.0" layoutY="268.0" prefHeight="200.0" prefWidth="200.0" />
      <Label layoutX="14.0" layoutY="183.0" text="Quantity:" />
      <TextField fx:id="quantityField" layoutX="14.0" layoutY="201.0" prefHeight="25.0" prefWidth="76.0" />
      <Button layoutX="14.0" layoutY="234.0" mnemonicParsing="false" onAction="#setQuantity" text="Set Quantity" />
      <Label layoutX="69.0" layoutY="3.0" text="Food Pantry">
         <font>
            <Font name="Californian FB Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="96.0" layoutY="201.0" mnemonicParsing="false" onAction="#incrementQuantity" text="+" />
      <Button layoutX="127.0" layoutY="201.0" mnemonicParsing="false" onAction="#decrementQuantity" text="-" />
   </children>
</AnchorPane>
